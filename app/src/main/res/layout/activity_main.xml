<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="mvvmViewModel"
            type="com.sargis.kh.android_architecture.viewmodel.MVVM_ViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{mvvmViewModel.message}"
            android:textAppearance="?android:textAppearanceLarge"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textViewFirstName"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0.1"/>

        <EditText
            android:id="@+id/textViewFirstName"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/first_name"
            app:layout_constraintTop_toBottomOf="@+id/textViewMessage"
            app:layout_constraintBottom_toTopOf="@+id/textViewLastName"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0.5"/>

        <EditText
            android:id="@+id/textViewLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/last_name"
            app:layout_constraintTop_toBottomOf="@+id/textViewFirstName"
            app:layout_constraintBottom_toTopOf="@+id/buttonUpdate"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0.0"/>

        <Button
            android:id="@+id/buttonUpdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/update"
            android:onClick="@{() -> mvvmViewModel.onUpdateClicked(textViewFirstName.getText().toString(), textViewLastName.getText().toString())}"
        app:layout_constraintTop_toBottomOf="@+id/textViewLastName"
            app:layout_constraintBottom_toTopOf="@+id/textViewHistory"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/buttonShowMessage"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0.0"/>

        <Button
            android:id="@+id/buttonShowMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/show"
            android:onClick="@{() -> mvvmViewModel.onShowClicked()}"
            app:layout_constraintTop_toTopOf="@+id/buttonUpdate"
            app:layout_constraintBottom_toBottomOf="@+id/buttonUpdate"
            app:layout_constraintLeft_toRightOf="@+id/buttonUpdate"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/textViewHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{mvvmViewModel.people.toString()}"
            app:layout_constraintVertical_bias="0.1"
            android:layout_marginTop="@dimen/margin_top"
            android:textAppearance="?android:textAppearanceLarge"
            app:layout_constraintTop_toBottomOf="@+id/buttonUpdate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/buttonUpdate"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>